<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.sap_project.e_klassenbuch.StudentBookListActivity">

    <TextView
        android:text="Filter Fach:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/label_filter"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filter_subject_spinner"
        android:layout_toRightOf="@+id/label_filter" />

    <TextView android:text="KlassenbucheintrÃ¤ge:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_entries"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/label_filter"
        android:layout_alignParentLeft="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listViewStudentBook"
        android:layout_below="@+id/label_entries" />

</RelativeLayout>
